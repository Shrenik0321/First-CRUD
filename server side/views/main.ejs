<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"/>
    <title>MERN.</title>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h5>Employee Details</h5>
        <a href="./add" class="btn btn-primary btn-sm float-end"
          >Add Employee</a
        >
      </div>
      <div class="card-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Workouts</th>
              <th>Load</th>
              <th>Reps</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach( row =>{ %>
              <tr>
                <td id="id" name="id"><%= row.id %></td>
                <td><%= row.workout %></td>
                <td><%= row.loads %></td>
                <td><%= row.reps %></td>
                <td>
                  <form action="./edit" method="POST">
                    <button class="btn btn-success btn-sm" name="edit" value="<%= row.id %>">Edit</button>
                  </form>
                </td>
                <td>
                  <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                  <!-- Modal -->
                  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-body">
                          Click Confirm to delete
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">Close</button>
                          <form action="/delete" method="POST">
                            <button class="btn btn-danger btn-sm" name="del" value="<%= row.id %>">Delete</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>